IP=$1
IFACE=$2
METRIC=$3
MTU=$4
MSS=$5
if [ -z "$IP" ]; then
 echo "ERROR: specify IPv6 address" >&2
 exit 1
fi
if [ -z "$IFACE" ]; then
 echo "ERROR: specify interface name" >&2
 exit 2
fi
METRIC=${METRIC:-0}
METRIC=$((2048+METRIC))
echo $IP|grep '^fe80:' >/dev/null && IP=$IP%$IFACE 
route add -net -inet6 :: $IP -mtu ${MTU:-1450} 

